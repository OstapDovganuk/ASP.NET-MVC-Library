@model Library.Models.Book
@using Library.Models
@{
    ViewBag.Title = "Редагувати";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BookId)

        <div class="form-group">
            <p>Назва книжки</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Редакція</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Edition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Edition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Кількість сторінок</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pages, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pages, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <details>
                <summary> Автори</summary>
                <div class="col-md-10">
                    @foreach (Author c in ViewBag.Authors)
                    {
                        <input type="checkbox" name="idAuthors" value="@c.AuthorId"
                               @(Model.Authors.Contains(c) ? "checked=\"checked\"" : "") />@c.FirstName  @c.LastName <br />
                        }
                </div>
            </details>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
