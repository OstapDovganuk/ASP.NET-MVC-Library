@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Редагувати книги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати книги</h2>

<p>
    @Html.ActionLink("Додати книгу", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Назва
        </th>
        <th>
           Редакція
        </th>
        <th>
            Автори
        </th>
        <th>
           Кількість сторінок
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Edition
        </td>
        <td>
           @foreach (var t in item.Authors)
           {
            <p>
                @t.FirstName @t.LastName
            </p>
           }
        </td>
        <td>
            @item.Pages
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id = item.BookId }) |
            @Html.ActionLink("Видалити", "Delete", new { id = item.BookId })
        </td>
    </tr>
}

</table>
