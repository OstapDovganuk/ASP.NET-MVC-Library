@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav">
    <li>@Html.ActionLink("Редагувати авторів", "Index", "Authors")</li>
    <li>@Html.ActionLink("Редагувати книги", "Index", "Admin")</li>
</ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a>Привіт @User.Identity.GetUserName()</a></li>
           <li><a href="javascript:document.getElementById('logoutForm').submit()">Вихід</a></li>
        </ul>
    }
}

