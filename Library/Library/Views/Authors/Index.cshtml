@model IEnumerable<Library.Models.Author>

@{
    ViewBag.Title = "Автори";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Автори</h2>

<p>
    @Html.ActionLink("Додати автора", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Ім'я
        </th>
        <th>
           Прізвище
        </th>
        <th>
            Рік народження
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.AuthorId }) |           
            @Html.ActionLink("Видалити", "Delete", new { id=item.AuthorId })
        </td>
    </tr>
}

</table>
